<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetBracket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="font">@font/noto_sans</item>
    </style>

    <!--    TOOLBAR THEME-->
    <style name="Widget.BetBracket.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:theme">@style/Theme.BetBracket</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <!-- BOTTOM NAV THEME   -->
    <style name="Widget.BetBracket.Toolbar.BottomNavigationView.Colored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/background</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="elevation">5dp</item>
    </style>
    
    <style name="TextAppearance.BetBracket.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor"> @color/textColorPrimary</item>
    </style>

<!--    FAB theme -->

    <style name="Widget.BetBracket.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorPrimaryDark</item>
    </style>

<!--    PLAYERCARD TITLE theme-->
    <style name="PlayerCard.Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/onSecondaryContainer</item>
        <item name="font">@font/noto_sans</item>
    </style>
    
<!--    ALERT DIALOG THEME -->
    <style name="AlertDialog.BetBracket" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:theme">@style/Theme.BetBracket</item>
        <item name="android:background">@color/secondaryContainer</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/onSecondaryContainer</item>
    </style>
</resources>